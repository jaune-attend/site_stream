{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="col-xs-6">
            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password, {'label':'Mot de passe'}) }}
                {{ form_row(form.confirm_mdp, {'label':'confirmation du mot de passe'}) }}
                <button class="btn btn-success">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
    
{% endblock %}